{
  "name": "Smart Search",
  "description": "The extension provides an optimized text searching based on a Wagner-Fisher algorithm.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": [
    "activeTab", "scripting", "tabs"
  ],

  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self' 'wasm-unsafe-eval'"
  },

  "background": {
    "service_worker": "js/event.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "sandbox": {
    "pages": [
      "searchSandbox/searchEngineSandbox.html"
    ]
  }
}