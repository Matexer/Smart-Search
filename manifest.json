{
  "name": "Smart Search",
  "description": "Better than Ctr+F. It shows also similar matches.",
  "version": "1.0",
  "manifest_version": 3,

  "cross_origin_embedder_policy": {
    "value": "require-corp"
  },
  
  "cross_origin_opener_policy": {
    "value": "same-origin"
  },

  "permissions": [
    "activeTab", "scripting", "storage"
  ],

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      }
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery-3.6.0/jquery-3.6.0.min.js",
             "lib/mark.js/mark.es6.min.js",
             "js/content.js"],
      "css": ["css/mark.css"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'unsafe-eval'; worker-src blob:"
  },

  "sandbox": {
    "pages": [
      "searchSandbox/searchEngineSandbox.html"
    ]
  }
}