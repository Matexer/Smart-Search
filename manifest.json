{
  "name": "Smart Search",
  "description": "The extension provides an optimized text searching based on a Wagner-Fisher algorithm.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": [
    "activeTab", "scripting", "tabs", "storage"
  ],

  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-eval'"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/mark.js/mark.es6.min.js",
             "lib/jquery-3.6.0/jquery-3.6.0.min.js",
             "js/content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  },

  "sandbox": {
    "pages": [
      "searchSandbox/searchEngineSandbox.html"
    ]
  }
}